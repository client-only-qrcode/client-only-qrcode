{
  "@schema": "https://json.schemastore.org/package.json",
  "name": "client-only-qrcode",
  "homepage": "https://client-only-qrcode.github.io/client-only-qrcode/",
  "packageManager": "pnpm@10.11.0",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "pnpm run build && vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm run lint:ts && pnpm run lint:html && pnpm run lint:md",
    "lint:ts": "eslint . --ext .ts,.tsx",
    "lint:html": "htmlhint --config=.htmlhintrc --ignore coverage/**,dist/**,node_modules/** \"**/*.html\"",
    "lint:md": "markdownlint --ignore coverage/**,dist/**,node_modules/** \"**/*.md\"",
    "lint:fix": "pnpm run lint:ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,html}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/dompurify": "^3.2.0",
    "@types/eslint": "^9.6.1",
    "@types/qrcode-svg": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "3.1.4",
    "@vitest/ui": "^3.1.4",
    "dompurify": "^3.2.6",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "htmlhint": "^1.2.0",
    "jsdom": "^26.1.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.5.3",
    "qrcode-svg": "^1.1.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-node-csp": "^0.1.3",
    "vitest": "^3.1.4"
  }
}
